<%
 const pageName = "Patients";

%>
<!doctype html>
<html lang="en">
<head>
    <%- include('../../includes/header.ejs', {pageName: pageName}) %>
</head>
<body>
    <%- include('../../includes/navbar.ejs') %>
    <%- include('../../includes/titlebar.ejs', {title:'Add Patient'}) %>
    <div class="defaultSpacing grid grid-cols-1 md:grid-cols-2 gap-2 my-2">
        <form class="" action="/api/addPatient" method="POST">
            <label for="name">Name:</label>
            <div class="grid grid-cols-2 gap-2">
                <input class="w-full px-2 py-2 my-1 rounded ring-2 ring-black" type="text" name="firstName" placeholder="First Name" required>
                <input class="w-full px-2 py-2 my-1 rounded ring-2 ring-black" type="text" name="lastName" placeholder="Last Name" required>
            </div>
            <label for="nhsnum">NHS Number:</label>
            <input class="w-full px-2 py-2 my-1 rounded ring-2 ring-black" type="number" name="nhsnum" placeholder="0000000000" required>
            <label for="sex">Sex:</label>
            <select class="w-full px-2 py-2 my-1 rounded ring-2 ring-black" name="sex">
                <option value="M">Male</option>
                <option value="F">Female</option>
            </select>
            <label for="nhsnum">Date of Birth:</label>
            <input class="w-full px-2 py-2 my-1 rounded ring-2 ring-black" type="date" name="dob" required>
            <input type="submit" class="w-full px-2 py-2 mt-1 rounded text-white hover:bg-green-600 bg-green-500">
        </form>
        <div class="bg-yellow-300 rounded px-3 py-2">
            <h1 class="text-2xl font-bold text-yellow-950"><i class="fa-solid fa-triangle-exclamation"></i> Notice:</h1>
            <p>- Please ensure that all information is correct before submitting.</p>
            <p>- This is where some more notice would go</p>
        </div>
    </div>
</body>
</html>