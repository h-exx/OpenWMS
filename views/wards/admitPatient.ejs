<%
const pageName = "Admit Patient";

%>
<!doctype html>
<html lang="en">
<head>
    <%- include('../../includes/header.ejs', {pageName: pageName}) %>
</head>
<body>
<%- include('../../includes/navbar.ejs') %>
<%- include('../../includes/titlebar.ejs', {title:'Admit Patient'}) %>
<%- include('../../includes/errorDisplay.ejs', {query:query}) %>
<div class="grid grid-cols-1 md:grid-cols-2 defaultSpacing gap-2 my-2">
    <% patients.forEach(patient => { %>
    <form action="/api/admitPatient" method="POST">
        <input type="hidden" name="wardid" value="<%= query.wardid %>">
        <input type="hidden" name="bedid" value="<%= query.bedid %>">
        <input type="hidden" name="patientid" value="<%= patient.id %>">
        <input type="submit" class="bg-blue-400 hover:bg-blue-500 hover:text-white rounded-lg px-2 py-2 text-blue-50 w-full" value="<%=patient.name%>">
    </form>
    <% }); %>
</div>
</body>
</html>